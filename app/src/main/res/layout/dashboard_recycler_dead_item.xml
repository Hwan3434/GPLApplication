<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="entity"
            type="com.hwan3434.gplapplication.domain.db.base.table.entity.PersonEntity" />
    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/death_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/death_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_pressed_gray"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_bg"
                android:gravity="center"
                android:text="@{entity.getCirclerText()}"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="38" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="@{entity.getTitle()}"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/person_day"
                app:layout_constraintStart_toEndOf="@+id/person_icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="이름" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_day"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="@{entity.getSubTitle()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/person_icon"
                app:layout_constraintTop_toBottomOf="@+id/person_name"
                tools:text="설명" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>